<div class="group relative bg-white border border-gray-200 rounded-lg flex flex-col overflow-hidden hover:shadow-lg transition-shadow">
  <%= link_to product_path(@product), class: "aspect-w-1 aspect-h-1 bg-gray-100" do %>
    <% if @product.images.attached? %>
      <%= image_tag @product.images.first, class: "h-full w-full object-cover object-center group-hover:opacity-80" %>
    <% else %>
      <div class="h-full w-full flex items-center justify-center">
        <span class="text-xs text-gray-500">No Image</span>
      </div>
    <% end %>
  <% end %>
  <div class="flex-1 p-4 space-y-2 flex flex-col">
    <h3 class="text-sm font-medium text-gray-900">
      <%= link_to @product.name, product_path(@product) %>
    </h3>
    <p class="text-sm text-gray-500 flex-grow"><%= @product.description.truncate(70) %></p>
    <div class="flex-1 flex flex-col justify-end">
      <p class="text-base font-medium text-gray-900"><%= number_to_currency(@product.price) %></p>
    </div>
  </div>
</div>