<div class="max-w-4xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Edit My Profile</h1>
  <%= form_with(model: @user, url: profile_path, method: :patch) do |form| %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        
      <%# Error messages here... %>

      <div class="flex items-center space-x-6 mb-8">
        <% if @user.profile_picture.attached? %>
            <%= image_tag @user.profile_picture, class: "h-20 w-20 rounded-full" %>
        <% else %>
            <div class="h-20 w-20 rounded-full bg-gray-200 flex items-center justify-center">
              <span class="text-2xl text-gray-500"><%= @user.full_name.first %></span>
            </div>
        <% end %>
        <div>
            <%= form.label :profile_picture, "Upload a new photo", class: "block text-sm font-medium text-gray-700" %>
            <%= form.file_field :profile_picture, class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
        </div>
      </div>

      <div class="mb-6">
          <%= form.label :email_address, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.email_field :email_address, class: "w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-100 cursor-not-allowed", disabled: true %>
          <p class="text-xs text-gray-500 mt-1">Email address cannot be changed.</p>
      </div>
      
      <%# First Name / Last Name fields here... %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <div>
          <%= form.label :first_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :first_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <div>
          <%= form.label :last_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :last_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>

      <%# Phone and Address fields here... %>
      <div class="mb-6">
        <%= form.label :phone, "Phone Number", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :phone, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="mb-6">
        <%= form.label :address, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_area :address, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="flex items-center justify-end space-x-4 border-t pt-6 mt-6">
        <%= link_to "Cancel", profile_path, class: "text-gray-600 font-medium" %>
        <%= form.submit "Save Changes", class: "bg-blue-600 text-white px-6 py-2 rounded-md font-medium hover:bg-blue-700 cursor-pointer" %>
      </div>
    </div>
  <% end %>
</div>