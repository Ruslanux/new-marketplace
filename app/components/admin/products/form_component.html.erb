<%= render(Admin::Shared::LayoutComponent.new(title: @product.new_record? ? "New Product" : "Edit Product")) do %>
  <div class="bg-white rounded-lg shadow p-6 max-w-2xl mx-auto">
    <%= form_with model: [:admin, @product], class: "space-y-6" do |f| %>
      <% if @product.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded" role="alert">
          <strong class="font-bold">Please fix the following errors:</strong>
          <ul>
            <% @product.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
      </div>

      <div>
        <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :description, rows: 4, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
      </div>
      
      <div>
        <%= f.label :image, "Product Image", class: "block text-sm font-medium text-gray-700" %>
        <%= f.file_field :image, class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
          <%= f.label :price, class: "block text-sm font-medium text-gray-700" %>
          <%= f.number_field :price, step: 0.01, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
        </div>
        <div>
          <%= f.label :stock_quantity, class: "block text-sm font-medium text-gray-700" %>
          <%= f.number_field :stock_quantity, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
        </div>
        <div>
          <%= f.label :category_id, class: "block text-sm font-medium text-gray-700" %>
          <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Select a category" }, { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" } %>
        </div>
      </div>

      <div class="flex justify-end gap-4">
        <%= link_to "Cancel", admin_products_path, class: "px-6 py-2 rounded-lg border" %>
        <%= f.submit class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 cursor-pointer" %>
      </div>
    <% end %>
  </div>
<% end %>