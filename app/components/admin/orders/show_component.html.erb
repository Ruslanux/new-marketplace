<%= render(Admin::Shared::LayoutComponent.new(title: "Order ##{@order.id}")) do %>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    
    <%# Main Order Details %>
    <div class="lg:col-span-2 bg-white rounded-lg shadow p-6">
      <h3 class="text-xl font-semibold text-gray-900 mb-4">Order Details</h3>
      
      <table class="min-w-full">
        <tbody class="divide-y divide-gray-200">
          <% @order.order_items.each do |item| %>
            <tr>
              <td class="py-4">
                <div class="flex items-center">
                  <%# FIXED: Changed from .image to .images.first to correctly display the attached image %>
                  <% if item.product.images.attached? %>
                    <%= image_tag item.product.images.first, class: "h-16 w-16 object-cover rounded-md mr-4" %>
                  <% else %>
                    <div class="h-16 w-16 bg-gray-100 rounded-md mr-4 flex items-center justify-center text-gray-400">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                    </div>
                  <% end %>
                  <div>
                    <p class="font-medium text-gray-900"><%= item.product.name %></p>
                    <p class="text-sm text-gray-500">Qty: <%= item.quantity %></p>
                  </div>
                </div>
              </td>
              <td class="py-4 text-right">
                <p class="font-medium text-gray-900"><%= number_to_currency(item.total_price) %></p>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <div class="border-t mt-4 pt-4 text-right">
        <p class="text-lg font-semibold text-gray-900">Total: <%= number_to_currency(@order.total_amount) %></p>
      </div>
    </div>

    <%# Customer & Status Details %>
    <div class="space-y-6">
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Customer</h3>
        <p><%= @order.user.full_name.presence || @order.user.email_address %></p>
        <p><%= @order.user.email_address %></p>
      </div>
      
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Update Status</h3>
        <%= form_with model: [:admin, @order], url: admin_order_path(@order), class: "flex items-center gap-4" do |f| %>
          <%= f.select :status, Order.statuses.keys.map { |status| [status.titleize, status] }, {}, class: "block w-full px-3 py-2 border border-gray-300 rounded-md" %>
          <%= f.submit "Update", class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 cursor-pointer" %>
        <% end %>
      </div>
    </div>
    
  </div>
<% end %>