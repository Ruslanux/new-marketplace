<%= render(Admin::Shared::LayoutComponent.new(title: "User Details")) do %>
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-xl font-semibold text-gray-900 mb-4"><%= @user.full_name.presence || @user.email_address %></h3>
    <p><strong>Email:</strong> <%= @user.email_address %></p>
    <p><strong>Role:</strong> <%= @user.role.titleize %></p>
    <p><strong>Joined:</strong> <%= @user.created_at.strftime("%B %d, %Y") %></p>
    
    <hr class="my-6">
    
    <h4 class="text-lg font-semibold text-gray-900 mb-4">Change Role</h4>
    <%= form_with model: @user, url: admin_user_path(@user), method: :patch, class: "flex items-center gap-4" do |f| %>
      <%= f.select :role, User.roles.keys.map { |role| [role.titleize, role] }, {}, class: "block w-48 px-3 py-2 border border-gray-300 rounded-md" %>
      <%= f.submit "Update Role", class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 cursor-pointer" %>
    <% end %>
  </div>
<% end %>
