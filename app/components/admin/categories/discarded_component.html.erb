<%= render(Admin::Shared::LayoutComponent.new(title: "Archived Categories")) do %>
  <div class="flex justify-end items-center mb-6">
    <%= link_to "â† Back to Active Categories", admin_categories_path, class: "text-sm font-medium text-blue-600" %>
  </div>

  <div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
          <th class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @categories.each do |category| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= category.name %></td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= link_to "Restore", restore_admin_category_path(category), "data-turbo-method": :patch, class: "text-green-600 hover:text-green-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="mt-6">
    <%= helpers.paginate @categories %>
  </div>
<% end %>