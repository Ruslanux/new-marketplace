<%= render(Admin::Shared::LayoutComponent.new(title: @category.new_record? ? "New Category" : "Edit Category")) do %>
  <div class="bg-white rounded-lg shadow p-6 max-w-lg mx-auto">
    <%= form_with model: [:admin, @category], class: "space-y-6" do |f| %>
      <% if @category.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <strong class="font-bold">Please fix the following errors:</strong>
          <ul>
            <% @category.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" %>
      </div>

      <div>
        <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :description, rows: 4, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" %>
      </div>

      <div class="flex justify-end gap-4">
        <%= link_to "Cancel", admin_categories_path, class: "px-6 py-2 rounded-lg border" %>
        <%= f.submit class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 cursor-pointer" %>
      </div>
    <% end %>
  </div>
<% end %>