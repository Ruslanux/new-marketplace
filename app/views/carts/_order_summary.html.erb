<%# Give the summary an ID so we can update it easily %>
<div id="order-summary" class="lg:col-span-1">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h2 class="text-lg font-semibold text-gray-900 border-b pb-4 mb-4">Order Summary</h2>
    <div class="flex justify-between items-center mb-6">
      <span class="text-gray-600">Subtotal</span>
      <span class="font-semibold text-gray-900"><%= number_to_currency(cart_total) %></span>
    </div>
    <%= form_with url: checkout_path, method: :post do |f| %>
      <%= f.submit "Proceed to Checkout", class: "w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors cursor-pointer" %>
    <% end %>
  </div>
</div>